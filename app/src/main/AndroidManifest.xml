<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.davidleal.easycreditapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Vistas.Actividades.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Vistas.Actividades.Login" />
        <activity android:name=".Vistas.Actividades.Registrarse" />
        <activity android:name=".Vistas.Actividades.Splash_activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Vistas.Actividades.SolicitudNueva" />
        <activity android:name=".Vistas.Actividades.DetalleSolicitud" />
        <activity android:name=".Vistas.Actividades.Administrador" />
        <activity android:name=".Vistas.Actividades.DetalleAdministrador"></activity>
    </application>

</manifest>